<div class="banner" style="background-image: url(<%= asset_url(@cocktail.image_url) %>);">
<div class="container">
  <div class="cocktail-container">
    <div class="cocktail-card">
      <h1><%= @cocktail.name %></h1>
      <h3>Ingredients:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> of <%= dose.ingredient.name %>
            <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail) %>
      <br>
      <%= link_to "All cocktails", cocktails_path %>
    </div>
  </div>
</div>
