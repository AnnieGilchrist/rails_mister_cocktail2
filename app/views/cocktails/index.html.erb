<div class="container">
  <h1 class="title">Fancy Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-6 col-md-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="title-card">
            <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.image_url %>);">

              <div class="card-description">
                <h3><%= cocktail.name %></h3>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
